from fractions import Fraction
import math

def find_index(limit) :
  fracs = set()
  for d in range(1, limit + 1) :
    for n in range(math.floor(428571*d/1000000), int(math.floor(3*d/7)) + 1) :
      # print(n,d)
      fracs.add(Fraction(n,d))
  fracs = sorted(fracs)
  return fracs[fracs.index(Fraction(3,7)) - 1]

print(find_index(1000000))
